<% if !@orders.present? %>
 <div class = "container">
  <div class = "row"><h3 class ='mt-5 text-center under'>注文履歴一覧</h3></div>
   <div class = "form-control">
    <h1>注文履歴がありません</h1>
   </div>
 </div>
 
<% else %>
 <div class = "container">
  <div class = "row">
   <h2 class="red-border px-3 pb-1">注文履歴一覧</h2>
  </div>
   <div class = "row">
    <div class = "table table-bordered">
      <thead>
       <tr class = "red-border">
         <th>注文日</th>
         <th>配送先</th>
         <th>注文商品</th>
         <th>支払金額</th>
         <th>ステータス</th>
         <th>注文詳細</th> 
       </tr>
      </thead>
      <tbody>
       <%= @orders.each do |order| %>
        <tr class = "brown_border" >
         <td><%= order.created_at %></td>
         <td><%= order.address %></td>
         <td><%= order.item_id %></td>
         <td><%= order.price %></td>
         <td><%= order.making_status %></td>
         <td><%#= order.order_path, class: 'btn btn-primary' %></td>
        </tr>
       <% end %>
      </tbody>
     </table>  
    </div>
   </div>
   
  </div> 
 </div>
 
 <% end %>