<div class="container my-5">
  <div class= "row">
   <div class= "offset-1">
    <h2 class="red-border">会員情報編集</h2>
   </div>
  </div>

<div class="row my-3">
 <div class="offset-2 col-8">
    <%= form_for(@customer) do |f| %>
     <div class = "form-group">
      <%= f.label :氏名 %>
     <div class = "form-row">
      <div class = "col-4">
       <%= f.text_field :last_name, class: "form-control",placeholder: "姓" %>
      </div>
      <div class = "col-4">
       <%= f.text_field :first_name, class: "form-control",placeholder: "名" %>
      </div>
     </div>
     <div class = "form-group my-2">
      <%= f.label :カナ %>
     <div class = "form-row">
      <div class = "col-4">
       <%= f.text_field :furigana_last, class: "form-control",placeholder: "姓" %>
      </div>
      <div class = "col-4">
       <%= f.text_field :furigana_first, class: "form-control",placeholder: "名" %>
      </div>
     </div>
    
     <div class = "form-group my-2">
      <%= f.label :郵便番号 %>
      <%= f.text_field :postal_code, class: "form-control col-6",placeholder: "郵便番号" %>
     </div>
    
     <div class = "form-group">
      <%= f.label :住所 %>
      <%= f.text_field :address, class: "form-control col-8",placeholder: "住所" %>
     </div>
    
     <div class = "form-group">
      <%= f.label :電話番号 %>
      <%= f.text_field :telephone_number, class: "form-control col-6",placeholder: "姓" %>
     </div>
     
      <div class = "row" >
       <div class = "col-5">
        <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
        <%#= f.submit "退会する", withdrow_customer_path(@customer), class: 'btn btn-danger'%>
       </div>
        <% end %>
      <div class= "offset-3 col-3">
       <%= link_to "退会する", customers_unsubscribe_path(@customer) ,class: "btn btn-danger"%>
      </div>
      </div>
    <%# end %>
 </div>
</div>
