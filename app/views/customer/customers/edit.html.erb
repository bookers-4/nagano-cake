<div class="container my-5">
  <div class= "row">
   <div class= "offset-1">
    <h2 class="red-border px-3 pb-1">会員情報編集</h2>
   </div>
  </div>

<div class="row my-3">
 <div class="offset-2 col-3">
    <%= form_for(@customer) do |f| %>
     <div class = "form-group">
      <%= f.label :氏名 %>
      <%= f.text_field :last_name, class: "form-control",placeholder: "姓" %>
      <%= f.text_field :first_name, class: "form-control",placeholder: "名" %>
     </div>
    
     <div class = "form-group">
      <%= f.label :フリガナ %>
      <%= f.text_field :furigana_last, class: "form-control",placeholder: "セイ" %>
      <%= f.text_field :furigana_first, class: "form-control",placeholder: "メイ" %>
     </div>
    
     <div class = "form-group">
      <%= f.label :郵便番号 %>
      <%= f.text_field :postal_code, class: "form-control",placeholder: "郵便番号" %>
     </div>
    
     <div class = "form-group">
      <%= f.label :住所 %>
      <%= f.text_field :address, class: "form-control",placeholder: "住所" %>
     </div>
    
     <div class = "form-group">
      <%= f.label :電話番号 %>
      <%= f.text_field :telephone_number, class: "form-control",placeholder: "姓" %>
     </div>
     
      <div class = "row" >
       <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
       <%#= f.submit "退会する", withdrow_customer_path(@customer), class: 'btn btn-danger' %>
       <% end %>
       <%= link_to "退会する", customers_unsubscribe_path(@customer) ,class: "btn btn-outline-danger font-weight-bold px-3"%>
      </div>
    <%# end %>
 </div>
</div>
