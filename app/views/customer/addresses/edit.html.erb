<% provide(:title, "配送先編集") %>
<div class="container my-5">
  <div class= "row">
   <div class= "offset-1">
    <h2 class="head-line text-center title_h2">配送先編集</h2>
   </div>
  </div>
     <%#= render "layouts/error_messages", resource: @address %>
  <div class="row my-3">
   <div class="offset-2 col-8">
    <%= form_with(model: @address, url:address_path, local: true , method: :patch) do |f| %>
     <div class="form-group">
      <%= f.label :"郵便番号(ハイフンなし)" %>
      <%= f.text_field :postal_code , class: "col-6 form-control" %>
     </div>
     <div class="form-group">
      <%= f.label :"住所" %>
      <%= f.text_field :address , class: "col-8 form-control" %>
     </div>
     <div class="form-group">
      <%= f.label :"宛名" %>
       <div class= "form-row">
        <div class="col-4 form-group">
         <%= f.text_field :last_name , class: "form-control" %>
        </div>
        <div class="col-4 form-group">
         <%= f.text_field :first_name , class: "form-control" %>
        </div>
       </div>
     </div>
     <div class="form-group">
      <%= f.submit '変更内容を保存' , class: "btn btn-primary btn-lg pull-right" %>
     </div>
    <% end %>
     <div class="shopping-back">
      <%= link_to "配送先登録/一覧へ戻る", addresses_path, data: {"turbolinks" => false}, class: "btn btn-info" %>
   </div>
  </div>
</div>