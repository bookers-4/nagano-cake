<h2>マイページ</h2>
 <h4>登録情報</h4>
  <div class = "row">
   <%= link_to "編集する", customers_edit_path(@cutomer), class: 'btn btn-success' %>
  </div>
    <table class="table table-borderless table-hover">
     <tr class = "brown-border">
      <td>氏名</td>
       <td>
     　 <%= customer.last_name %>
     　 <%= customer.first_name %>
       </td>
     </tr>
      
     <tr class = "brown-border">
      <td>カナ</td>
       <td>
        <%= customer.furigana_last %>
        <%= customer.furigana_first %>
       </td>
     </tr>
    
     <tr class = "brown-border">
      <td>郵便番号</td>
    　 <td><%= customer.postal_code %></td>
     </tr>
    　
     <tr class = "brown-border">
      <td>住所</td>
    　 <td><%= customer.address %></td>
     </tr>
    
     <tr class = "brown-border">
      <td>電話番号</td>
    　 <td><%= customer.telephone_number %></td>
     </tr>
    　
     <tr class = "brown-border">
      <td>メールアドレス</td>
    　 <td><%= customer.email %></td>
     </tr>
   </table>

    <div class = "row">
     <%= link_to "配送先一覧を見る",,class: 'btn btn-primary' %>
    </div>
    <div class = "row">
     <%= link_to "注文一覧を見る",,class: 'btn btn-primary' %>
    </div>