<% provide(:title, "新規会員登録") %>
<div class="row">
  <div class="col-offset-2 col-8 my-2">

    <h2 class="head-line title_h2 text-center bg-secondary text-white my-5 offset-2"></i>新規会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%#= render "layouts/error_messages", resource: resource %>

      <div class="form-group col-10 offset-2">
        <%= f.label :"名前", class: "col-2 control-label" %>
        <%= f.label :"(姓)", class: "col-2 control-label" %>
        <%= f.text_field :last_name, autofocus: true, class: "col-2 form-control-static name" %>
        <%= f.label :"(名)", class: "col-2 control-label" %>
        <%= f.text_field :first_name, autofocus: true, class: "col-2 form-control-static name" %>
      </div>

      <div class="form-group col-10 offset-2">
        <%= f.label :"フリガナ", class: "col-2 control-label" %>
        <%= f.label :"(セイ)", class: "col-2 control-label" %>
        <%= f.text_field :furigana_last, autofocus: true, class: "col-2 form-control-static name" %>
        <%= f.label :"(メイ)", class: "col-2 control-label" %>
        <%= f.text_field :furigana_first, autofocus: true, class: "col-2 form-control-static name" %>
      </div>

        <%= render "customers/shared/form_mail", f: f %>
        <%= render "customers/shared/form_customer", f: f %>

      <div class="form-group col-10 offset-2">
        <%= f.label :"パスワード(6文字以上)", class: "col-4 control-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-4 form-control-static" %>
      </div>

      <div class="form-group col-10 offset-2">
        <%= f.label :"パスワード(確認用)", class: "col-4 control-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-4 form-control-static" %>
      </div>

      <div class="ccol-10 offset-2">
        <%= f.submit "新規登録",class: 'btn btn-success btn-lg offset-4 col-3' %>
      </div>
    <% end %>
   
   <div class = "row">
    <div class ="col-10 offset-2 my-2">
      <h2 class ="head-line title_h2 bg-secondary text-white text-left my-2">既に登録済みの方</h2>
      <%= link_to "こちら", new_customer_session_path, class: "offset-1 my-5" %>からログインしてください。
    </div>
   </div>
  </div>
</div>