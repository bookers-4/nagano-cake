<div class="container">
    <div class="row">
        <div class="admin-heading col-md-12">
            <h2><span style="background-color:#dcdcdc">注文履歴詳細</span></h2>
            <table class="table">
            <tbody>
                <tr>
                    <th>購入者</th>
                    <td>
                      <%= @order.customer.last_name %>
                      <%= @order.customer.first_name %>
                    </td>
                </tr>
                <tr>
                    <th>注文日</th>
                    <td><%= @order.created_at.strftime("%Y%m%d %H:%M")%></td>
                </tr>
                <tr>
                    <th>配送先</th>
                    <td><%= @order.address %></td>
                </tr>
                <tr>
                    <th>支払方法</th>
                    <td><%= @order.payment_method %></td>
                </tr>
                <tr>
                    <th>注文ステータス</th>
                    <td>
                        <%= form_with model: @order, url:admins_order_path(@order), local: true do |f| %>
                        <%= f.select :status, {["入金待ち","入金待ち"], ["入金確認","入金確認"], ["製作中","製作中"],["発送準備中", "発送準備中"], ["発送済み", "発送済み"]}, class: "form-control" %>
                        <%= f.submit "更新", class: "btn ml-3 btn-dark btn-sm" %>
                    <% end %>
                    </td>
                </tr>
            </tbody>
            </table>
        </div>

        <div class="row md-5">
        <div class="col-7">
            <table class="table mt-3 table-borderless table-hover rounded-top rounded-bottom table_border_radius admin-order-table">
                <thead class="thead-dark">
                    <tr>
                        <th>商品名</th>
                        <th>単価（税抜）</th>
                        <th>数量</th>
                        <th>小計</th>
                        <th>製作ステータス</th>
                    </tr>
                </thead>

                <tbody>
                    <%= @sum = 0 %>
                    <% @order_items.each do |order_item| %>
                    <tr>
                        <td><%= order_item.item.name %></td>
                        <td><%= order_item.item.add_tax_price %></td>
                        <td><%= order_item.amount %></td>
                        <td>
                            <%= @item_price = order_item.item.add_tax_price * order_item.amount %>
                            <%= @items_price %>
                        </td>
                        <td>
                            <%= form_with model: order_item, url: admins_order_item_path(@order, order_item), local: true do |f| %>
                            <%= f.select :status, {["着手不可", "着手不可"], ["製作待ち", "製作待ち"], ["製作中", "製作中"], ["製作完了", "製作完了"]} class: "form_control" %>
                            <%= f.submit "更新", class: "btn ml-3 btn-dark btn-sm" %>
                    <% end %>
                        </td>
                        <%= @sum += @items_price %>
                    <% end %>
                    </tr>
                </tbody>
            </table>
        </div>
        <table class="table table-borderless">
            <tbody>
                <tr>
                    <th>商品合計</th>
                    <td><%= @sum %>円</td>
                </tr>
                <tr>
                    <th>送料</th>
                    <td>800円</td>
                </tr>
                <tr>
                    <td>請求金額合計</td>
                    <td><%= @sum + 800 %>円</td>
                </tr>
            </tbody>
        </table>

        </div>
    </div>
</div>