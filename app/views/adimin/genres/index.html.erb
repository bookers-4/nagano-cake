<div class="col-md-8 offset-md-1">
  <h2>ジャンル一覧・追加</h2>
  <div class="create_genres">
    <%= form_with model: [:admins, @genre], local:ture do |f| %>
      <div class="form_group">
          <label for="genre_name">ジャンル名</label>
          <%= f.text_field :name %>
          <button class="btn btn-success"><%= f.submit "新規登録" %>新規登録</button>
      </div>
    <% end %>
  </div>

  <tbody>
    <% @genre.each do |genre| %>
    <tr>
        <td><%= genre.name %></td>
        <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn-success" %></td>
    </tr>
  </tbody>
</div>
